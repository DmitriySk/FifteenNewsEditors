<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ImageView
            android:id="@+id/news_card_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/news_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_card_img"
            android:layout_alignParentLeft="true"
            android:paddingLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Some news"
            android:textSize="11dp"
            android:lines="2"
            android:maxLines="2"/>

        <Button
            android:id="@+id/news_card_sub"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/news_card_title"
            android:layout_alignParentLeft="true"
            android:padding="0dp"
            android:layout_marginTop="5dp"
            android:text="Подписаться"
            android:textSize="8dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
